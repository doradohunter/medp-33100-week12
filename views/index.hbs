<div class="shop">
    <div class="section">
        <div class="candle" id="label">
            <div class="row_description">
                <h3>Shopping Cart</h3>
                <p class="empty_cart">Your cart is empty.</p>

                {{#each cartItems}}
                    {{#each this.product}}
                        <div class="added_items" id="{{this._id}}">
                            <div class="added_item_description">
                                <h4>{{this.name}}</h4>
                                <p>Qauntity: 1</p>
                            </div>
                            <div class="added_item_description">
                                <img class="removeIcon" src="https://www.svgrepo.com/show/502812/remove.svg" width="30px">
                                <p>${{this.price}}</p>
                            </div>
                        </div>
                    {{/each}}
                {{/each}}

            </div>
                <b class="more">PURCHASE</b>
        </div>
        <div class="candle" id="shopCandle">
            {{#each products}}
                <div class="col" id="{{this._id}}">
                    {{#each this.label}}
                        <div class="incentive" id="{{this.label}}">{{this.label}}</div>
                    {{/each}}
                    <img class="shop_image" src="https://images.unsplash.com/photo-1602874801007-bd458bb1b8b6?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D">
                    <div class="pDets">
                        <small class="stock">{{this.stock}} left in stock</small>
                        <small class="rate">{{this.rating}} <img src="https://www.svgrepo.com/show/513408/star.svg" width="10px"></small>
                    </div>
                    <div class="item">
                        <div class="item_detail">
                            <p class="name">{{this.name}}</p>
                            <p class="price">${{this.price}}</p>
                        </div>
                        <img class="cart" src="https://www.svgrepo.com/show/379633/shopping-cart.svg">
                    </div>
                </div>
            {{/each}}
        </div>

</div>

