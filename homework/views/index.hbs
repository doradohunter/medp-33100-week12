<div class='form-container'>
  <form id='addRestaurantForm'>
    <h3>
      Add New Restaurant
    </h3>
    <input type='text' name='name' placeholder='Restaurant Name' required />
    <input type='text' name='type' placeholder='Restaurant Type' required />
    <input type='text' name='borough' placeholder='Borough' required />
    <button type='submit'>
      Add Restaurant
    </button>
  </form>
</div>

<div class='nyc-container'>
  {{#each nyc}}
    <div class='nyc-card' data-id='{{this._id}}'>
      <div class='card-content'>
        <h2 class='nyc-name'>
          {{this.name}}
        </h2>
        <p class='nyc-type'>
          Type: {{this.type}}
        </p>
        <p class='nyc-borough'>
          Borough: {{this.borough}}
        </p>
      </div>
      <div class='card-actions'>
        <button class='edit-btn'>
          Edit
        </button>
        <button class='delete-btn'>
          Delete
        </button>
      </div>
    </div>
  {{/each}}
</div>

<div id='editModal' class='modal'>
  <div class='modal-content'>
    <form id='editRestaurantForm'>
      <h3>
        Edit Restaurant
      </h3>
      <input type='text' name='name' placeholder='Restaurant Name' required />
      <input type='text' name='type' placeholder='Restaurant Type' required />
      <input type='text' name='borough' placeholder='Borough' required />
      <input type='hidden' name='restaurantId' />
      <button type='submit'>
        Update
      </button>
      <button type='button' class='cancel-btn'>
        Cancel
      </button>
    </form>
  </div>
</div>